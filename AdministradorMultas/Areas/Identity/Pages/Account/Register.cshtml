@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["ShowNav"] = false;
}

<link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />

<div class="form-container">
    <div class="container-form-register">
        <div class="information">
            <div class="info-childs">
                <h2>Ya tienes una cuenta?</h2>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
                <input type="button" value="Iniciar Sesión" id="sign-up-form" onclick="location.href='./Login';">
            </div>
        </div>
        <div class="form-information">
            <div class="form-information-childs">
                <h2>Crear una cuenta</h2>
                <div class="icons">
                    <i class="bx bxl-google"></i>
                    <i class="bx bxl-github"></i>
                </div>
                <p>Usa tu email para registrarte</p>
                <form class="form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <label class="label-email">
                        <i class="bx bx-user"></i>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Correo Electrónico" required autofocus />
                        <span asp-validation-for="Input.Email" class="texto-erroneo"></span>
                    </label>
                    <label class="label-password">
                        <i class="bx bx-lock-alt"></i>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Contraseña" required />
                        <span asp-validation-for="Input.Email" class="texto-erroneo"></span>
                    </label>
                    <label class="label-confirm-password">
                        <i class="bx bx-lock-alt"></i>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmar Contraseña" required />
                        <span asp-validation-for="Input.Email" class="texto-erroneo"></span>
                    </label>
                    <input type="submit" value="Registrarse">
                </form>
            </div>
        </div>
    </div>
</div>

