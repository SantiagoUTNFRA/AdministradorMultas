@model ListaMunicipio

@{
    ViewData["Title"] = "Detalle de Municipio: " + Model.Nombre;
}

<div class="text-center">
    <h1 class="display-4 text-white">Detalle de Municipio: @Model.Nombre</h1>
</div>

<div class="container">
    <h2 class="text-white">Cámaras</h2>
    <table class="table table-striped text-white">
        <thead class="thead-dark">
            <tr>
                <th>Id Vial Control</th>
                <th>Id Inspector</th>
                <th>Ubicación</th>
                <th>Municipio</th>
                <th>Fecha de Alta</th>
                <th>Ultima modificación</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var camara in Model.Camaras)
            {
                <tr class="text-white">
                    <td>@camara.IdVialControl</td>
                    <td>@camara.IdInspector</td>
                    <td>@camara.Ubicacion</td>
                    <td>@camara.Municipios.Nombre</td>
                    <td>@camara.FechaAlta</td>
                    <td>@camara.LastModification</td>
                </tr>
            }

        </tbody>
    </table>
    <div class="d-flex justify-content-end mt-3">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#importModal">
            Importar Lista
        </button>
    </div>

</div>

<div class="modal fade" id="importModal" tabindex="-1" role="dialog" aria-labelledby="importModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importModalLabel">Importar Lista</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" enctype="multipart/form-data" asp-action="ImportarCamaras" asp-controller="Camara">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="file">Selecciona un archivo para importar</label>
                        <input type="file" id="file" name="file" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Importar</button>
                </div>
            </form>
        </div>
    </div>
</div>
