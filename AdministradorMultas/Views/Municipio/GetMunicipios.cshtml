@model IEnumerable<ListaMunicipio>

@{
    ViewData["Title"] = "Municipios Page";
}

<div class="text-center">
    <h1 class="display-4 text-white">Municipios</h1>
</div>

<div class="container">
    <table class="table table-striped text-white">
        <thead class="thead-dark">
            <tr>
                <th>Nombre del municipio</th>
                <th>Cámaras</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var municipio in Model)
            {
                <tr class="text-white">
                    <td>@municipio.Nombre</td>
                    <td>
                        <a asp-action="DetalleMunicipio" asp-route-id="@municipio.Id" class="btn btn-primary text-white">Ver cámaras</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-end mt-3">
        <button type="button" class="btn btn-primary" id="addMunicipioButton" data-toggle="modal" data-target="#addMunicipioModal">Agregar Municipio</button>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addMunicipioModal" tabindex="-1" role="dialog" aria-labelledby="addMunicipioModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addMunicipioModalLabel">Agregar Municipio</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addMunicipioForm" asp-action="CrearMunicipio" method="post">
                    <div class="form-group">
                        <label for="Nombre" class="text-dark">Nombre del Municipio</label>
                        <input type="text" class="form-control" id="Nombre" name="Nombre" placeholder="Ingrese el nombre del municipio">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button form="addMunicipioForm" type="submit" class="btn btn-primary">Agregar</button>
            </div>
        </div>
    </div>
</div>
