@model ListaMunicipio

@{
    ViewData["Title"] = "Agregar Municipio";
}

<div class="text-center">
    <h1 class="display-4 text-white">Agregar Municipio</h1>
</div>

<div class="container">
    <form asp-action="CrearMunicipio" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="Nombre" class="text-white">Nombre del Municipio</label>
            <input type="text" class="form-control" id="Nombre" asp-for="Nombre" placeholder="Ingrese el nombre del municipio">
        </div>
        <button type="submit" class="btn btn-primary">Agregar</button>
    </form>
</div>
